/**index.wxss**/
.usermotto {
  margin-top: 200px;
}
.container{
  width: 100%;
  height: 100%;
}
.head{
  width: 100%;
  height: 300rpx;
  background:linear-gradient(226deg,rgba(101,238,222,1) 0%,rgba(110,203,255,1) 100%);
  border-radius: 100% 100% 100% 100% / 0% 0% 40% 40%;
}
.homeContent{
  width: 100%;
  height: 100%;
  position: absolute;
  left:0;
  top:0;
  background: transparent;
  box-sizing: border-box;
  padding-top: 170rpx;
}
.homeContent .info{
  width: 70%;
  /* height: 200rpx; */
  background: #fff;
  border-radius: 10rpx;
  padding:20rpx;
  margin: 0 auto;
}
.homeContent .info button{
  width: 100%;
  height: 100%;
  display: flex;
  background: #fff;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.homeContent .info .button-hover{
  color:#333;
  background-color: #fff;
}
.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  font-size: 12px;
}
.homeContent .user{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  padding-left: 5%;
  position: relative;
}
.homeContent .user:after{
  content: '';
  display: block;
  width: 90%;
  height: 1px;
  background-color: #f0f0f0;
  position: absolute;
  left:5%;
  bottom: 0;
}
.homeContent .user text{
  margin-left: 25rpx;
  margin-top: 20rpx;
}
.homeContent .user icon{
  position: absolute;
  left:calc(5% + 70rpx);
  top:-15rpx;
  font-size: 50rpx;
}
.homeContent .user .auto{
  left:auto;
  right:50rpx;
  top:-10rpx;
  font-size: 120rpx;
}
.homeContent .gasInfo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10rpx;
}
.homeContent .infoItem{
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.homeContent .list{
  width: 90%;
  margin: 0 auto;
  margin-top: 40rpx;
  background: #fff;
}
.homeContent .item{
  display: flex;
}